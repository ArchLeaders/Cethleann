        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <DocumentationFile>Cethleann.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
        <DefineConstants>TRACE_ASSERTIONS;DEBUG_ASSERTIONS;DEBUG_ASSERTIONS_LOG</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
        <DefineConstants>TRACE;DEBUG_ASSERTIONS;DEBUG_ASSERTIONS_LOG</DefineConstants>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Library\DragonLib\DragonLib.csproj" />
        <ProjectReference Include="..\Library\GLTFSerialization\GLTFSerialization.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="filelist-FireEmblemThreeHouses.csv">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="JetBrains.Annotations" Version="2019.1.3" />
    </ItemGroup>

</Project>
